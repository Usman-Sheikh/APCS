
@{
    ViewBag.Title = "Status";
}

<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container">
          
           
        <h2 style="color:forestgreen">@ViewBag.msg</h2>
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box">
                        <h4 class="header-title m-t-0 m-b-30">Send Status</h4>
                        <div class="row">
                            <div class="col-lg-12 col-sm-12 col-xs-12 col-md-12 col-xl-6">
                                <form method="post">
                                  <input type="hidden" value="@ViewBag.id" name="id">
                                    <fieldset class="form-group">
                                        <label for="exampleSelect1">Select Status</label>
                                        <select class="form-control" id="exampleSelect1" name="status">
                                            <option>In Progress</option>
                                            <option>Resolved</option>
                                            <option>False Complain</option>
                                        </select>
                                    </fieldset>
                                    
                                    <fieldset class="form-group">
                                        <label for="exampleTextarea">Message</label>
                                        <textarea class="form-control" id="exampleTextarea" name="msg"
                                                  rows="3"></textarea>
                                    </fieldset>
                                  
                                    <button type="submit" class="btn btn-primary">Send</button>
                                </form>
                            </div><!-- end col -->
                            <!-- end col -->
                        </div><!-- end row -->
                    </div>
                </div><!-- end col -->
            </div>
       

        </div> <!-- container -->
    </div> <!-- content -->
</div>


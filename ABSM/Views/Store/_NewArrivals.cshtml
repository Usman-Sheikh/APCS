@model IEnumerable<ABSM.Models.Product>

<!-- New Arrivals
================================================== -->
<div class="container">
    <!-- Headline -->
    <div class="sixteen columns">
        <h3 class="headline">New Arrivals</h3>
        <span class="line margin-bottom-0"></span>
    </div>
    <!-- Carousel -->
    <div id="new-arrivals" class="showbiz-container sixteen columns">
        <!-- Navigation -->
        <div class="showbiz-navigation">
            <div id="showbiz_left_1" class="sb-navigation-left"><i class="fa fa-angle-left"></i></div>
            <div id="showbiz_right_1" class="sb-navigation-right"><i class="fa fa-angle-right"></i></div>
        </div>
        <div class="clearfix"></div>
        <!-- Products -->
        <div class="showbiz" data-left="#showbiz_left_1" data-right="#showbiz_right_1" data-play="#showbiz_play_1">
            <div class="overflowholder">
                <ul>
                    @foreach (var product in Model)
                    {

                        <li>
                            <figure class="product">
                                <div class="mediaholder">
                                    <a href="@Url.Action("Details","Store", new { id = product.ProductID })">
                                        <img alt="" src="@Url.Content(product.ImageUrl)" />
                                        <div class="cover">
                                            <img alt="" src="@Url.Content(product.ImageUrl)" />
                                        </div>
                                    </a>
                                    <a href="@Url.Action("AddtoCart","ShoppingCart", new { id = product.ProductID })" class="product-button"><i class="fa fa-shopping-cart"></i> Add to Cart</a>
                                </div>
                                <a href="variable-product-page.html">
                                    <section>
                                        <a href="@Url.Action("Browse","Store", new { id = product.Shop.ShopID })">
                                            <span class="product-category">@product.Shop.Name</span>
                                        </a>
                                        <h5>@product.Name</h5>
                                        <span class="product-price">PKR @product.Price</span>
                                    </section>
                                </a>
                            </figure>
                        </li>
                    }
                    <!-- Product #1 -->



                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>

